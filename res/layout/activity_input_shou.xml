<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <include layout="@layout/lable_title"/>
	<RelativeLayout
	    android:id="@+id/lable_location2" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:background="@drawable/border_bottom_black">
	    <TextView
	        android:id="@+id/lable_location_shou" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/black_text"
	        android:text="收件人地址："/>
	    <ImageView
	        android:id="@+id/img_location_show_arrow"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:src="@drawable/arrow_right"
	        android:layout_alignParentRight="true" />
	    <TextView
	        android:id="@+id/tv_location_shou"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="请选择收件人地址"
	        android:textSize="14sp"
	        android:textColor="@color/black_text"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/lable_location_shou"
	        android:layout_toLeftOf="@id/img_location_show_arrow"/>
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="收件人具体位置："
	        android:textColor="@color/black_text"/>
	    <com.example.infocollect.view.ClearEditText 
	        android:id="@+id/edt_address_detail_shou"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:hint="请输入收件人具体位置"
	        android:textSize="12sp"
	        android:inputType="text"
	        android:textColor="@color/black_text"/>
	</LinearLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:background="@drawable/border_bottom_black">
	    <TextView
	        android:id="@+id/lable_name_shou" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/black_text"
	        android:text="收件人姓名："/>
	    <com.example.infocollect.view.ClearEditText 
	        android:id="@+id/edt_name_shou"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:hint="请输入收件人姓名"
	        android:textSize="14sp"
	        android:layout_toRightOf="@id/lable_name_shou"/>
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:background="@drawable/border_bottom_black">
	    <TextView
	        android:id="@+id/lable_phone_shou" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/black_text"
	        android:text="收件人电话："/>
	    <com.example.infocollect.view.ClearEditText 
	        android:id="@+id/edt_phone_shou"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@null"
	        android:textSize="14sp"
	        android:hint="请输入收件人电话"
	        android:inputType="phone"
	        android:layout_toRightOf="@id/lable_phone_shou"/>
	</RelativeLayout>
	<RelativeLayout
	    android:id="@+id/lable_type" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:background="@drawable/border_bottom_black">
	    <TextView
	        android:id="@+id/lable_type_" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textColor="@color/black_text"
	        android:text="物品类别："/>
	    <ImageView
	        android:id="@+id/img_type_arrow"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:src="@drawable/arrow_right"
	        android:layout_alignParentRight="true" />
	    <TextView
	        android:id="@+id/tv_type"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:hint="请选择物品类别"
	        android:textColor="@color/black_text"
	        android:textSize="14sp"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/lable_type_"
	        android:layout_toLeftOf="@id/img_type_arrow"/>
	</RelativeLayout>
	<TextView 
	        android:id="@+id/tv_btn_sub"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:gravity="center"
	        android:layout_margin="20dp"
	        android:textSize="18sp"
	        android:textColor="@color/white"
	        android:background="@drawable/btn_corner_exit"
	        android:text="确     定"/>
</LinearLayout>